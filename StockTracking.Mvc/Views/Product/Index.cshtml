        @foreach(var item in Model)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.SupplierId</td>
                <td>@item.CategoryId</td>
                <td>@item.BrandId</td>
                <td>@item.Barcode</td>
                <td>@item.UnitPrice</td>
                <td>@item.UnitInStock</td>
                <td>@item.UnitsInOrder</td>
                <td><button class="btn btn-success">Update</td>
                <td><button class="btn btn-warning">Delete</td>
            </tr>
        }
</table>
