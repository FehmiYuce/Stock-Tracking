@*@model StockTracking.Mvc.Models.ProductModel*@
@using Entities.Concrete
@model List<Entities.Concrete.Product>

@{
    Layout = null;
}

 <head>
        <meta name="viewport" content="widht=device-widht"/>
        <title>Products</title>
        <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.0/css/bootstrap.min.css"/>
        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4-4.6.0/jq-3.6.0/jszip-2.5.0/dt-1.13.1/b-2.3.3/b-colvis-2.3.3/b-html5-2.3.3/b-print-2.3.3/datatables.min.css"/>

 </head>


<h3>Product Table</h3>
<br>
<table class="table table-bordered">
    <tr>
        <th>Product Name </th>
        <th>Supplier Id</th>
        <th>Category Id</th>
        <th>Brand Id</th>
        <th>Barcode </th>
        <th>Unit Price </th>
        <th>Units in Stock </th>
        <th>Units in Order </th> 
    </tr>
